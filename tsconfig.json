{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ESNext",
    "esModuleInterop": true,
    "allowJs": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "rootDir": "./src",
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["node_module", "dist"]
}
